{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mb-5">
            <div class="col-3 offset-3">
                <h1>Profil</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <img class="img-fluid" src="{{ user.imageName  }}" alt="" width="300px">
            </div>

            <div class="col-8">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>Sexe</th>
                        <td>{{ user.userGender }}</td>
                    </tr>
                    <tr>
                        <th>Prenom</th>
                        <td>{{ user.userLastName }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ user.userFirstName }}</td>
                    </tr>
                    <tr>
                        <th>Téléphone</th>
                        <td>{{ user.userPhone }}</td>
                    </tr>
                    <tr>
                        <th>Anniversaire</th>
                        <td>{{ user.userBirthday ? user.userBirthday|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.userEmail }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <a class="btn btn-dark" href="{{ path('home') }}">Retour à l'accueil</a>
        <a class="btn btn-dark" href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
    </div>









{% endblock %}
