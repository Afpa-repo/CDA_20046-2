{% extends 'base.html.twig' %}

{% block title %}Address index{% endblock %}

{% block body %}
    <h1>Address index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>AddressType</th>
                <th>AddressCountry</th>
                <th>AddressDistrict</th>
                <th>AddressPostalCode</th>
                <th>AddressCity</th>
                <th>AddressNumStreet</th>
                <th>AddressStreet</th>
                <th>AddressComplement</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td>{{ address.addressType }}</td>
                <td>{{ address.addressCountry }}</td>
                <td>{{ address.AddressDistrict }}</td>
                <td>{{ address.AddressPostalCode }}</td>
                <td>{{ address.addressCity }}</td>
                <td>{{ address.addressNumStreet }}</td>
                <td>{{ address.AddressStreet }}</td>
                <td>{{ address.AddressComplement }}</td>
                <td>
                    <a href="{{ path('address_show', {'id': address.id}) }}">show</a>
                    <a href="{{ path('address_edit', {'id': address.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('address_new') }}">Create new</a>
{% endblock %}
