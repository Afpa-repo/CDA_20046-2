<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
              integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
              crossorigin="anonymous">
    {% endblock %}
</head>
<body class="container-fluid m-0 p-0">


{% block nav %}
    <div class="row p-0 m-0">
        <div class="col-12 p-1 m-0  position-relative">

            <nav class="navbar navbar-expand-lg navbar-light bg-light mt-4 p-1">
                <a class="navbar-brand ml-5" href="{{ path('home') }}">Poster</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse ml-5" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Categorie
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">

                                <a class="dropdown-item" href="{{ path('product_index') }}">Format</a>

                                <a class="dropdown-item" href="{{ path('product_index') }}">Theme</a>

                                <a class="dropdown-item" href="{{ path('product_index') }}">Materiaux</a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('product_index') }}">Product</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('product_index') }}">Tendance</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('product_index') }}">Vente priv√©e</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                        </li>
                    </ul>

                    <ul class="list-group list-group-horizontal list-unstyled mr-5 ">
                        <li>
                            <a class="nav-link" href="#" tabindex="-1" aria-disabled="true"><img
                                        src="{{ asset("images/nav/search-line.png") }}" alt="search-icon"></a>
                        </li>
                        <li>
                            <a class="nav-link" href="{{ path('cart') }}" tabindex="-1" aria-disabled="true"><img
                                        src="{{ asset("images/nav/shopping-cart-line.png") }}" alt="cart-icon"></a>
                        </li>


                        {% if is_granted('ROLE_USER') %}
                        <li>
                            <a class="nav-link " href="{{ path('user_show', {'id': app.user }) }}" tabindex="-1" aria-disabled="true">
                                <img src="{{ asset("images/nav/user-line.png") }}" alt="user-icon"> </a>
                        </li>

                            <li>
                                <a class="nav-link " href="{{ path('logout') }}" tabindex="-1" aria-disabled="true">
                                    <img src="{{ asset("images/nav/logout-circle-line.png") }}" alt="user-icon"> </a>
                            </li>
                        {% endif %}



                        <li>
                            <a class="nav-link " href="{{ path('user_new', {'role':1} ) }}" tabindex="-1" aria-disabled="true">
                                <img src="{{ asset("images/nav/user-line.png") }}" alt="user-icon"> </a>
                        </li>
                        <li>
                            <a class="nav-link " href="{{ path('login' ) }}" tabindex="-1" aria-disabled="true">
                                <img src="{{ asset("images/nav/login-circle-line.png") }}" alt="user-icon"> </a>
                        </li>


                    </ul>
                </div>
            </nav>
        </div>
    </div>


