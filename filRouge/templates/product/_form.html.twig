{{ form_start(form) }}
    {{ form_widget(form) }}

    {# VÃ©rifier si la route est "product_edit" on affiche les images #}
    {% if app.request.attributes.get('_route') == 'product_edit' %}
        <p class="h2">Images</p>
        {% for picture in product.picture %}
            <div>
                <img src="{{ asset('/images/uploadprod/' ~ picture.name) }}" alt="picture" width="150">
                <a href="{{ path('picture_prod_delete', {'id': picture.id}) }}" data-delete
                   data-token="{{ csrf_token('delete' ~ picture.id) }}">Supprimer</a>
            </div>
        {% endfor %}
    {% endif %}
<button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
