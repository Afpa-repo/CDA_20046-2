{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}

{% if items | length > 0 %}
    <table class="table">
        <thead>
        <tr>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantity</th>
            <th>Total</th>
            <th></th>
        </tr>
        </thead>
    <tbody>
    
    {% for item in items %}
    <tr>
        <td>{{ item.product.proName }}</td>
        <td>{{ item.product.proUnitPrice }}</td>
        <td>{{ item.quantity }}</td>
        <td>{{ item.product.proUnitPrice * item.quantity }}</td>
        <td>
            <a href="{{ path('cart_remove', {'id' : item.product.id}) }}" class="btn btn-danger btn-sm">
                <span class="oi oi-trash"></span>
            </a>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot>
    <tr>

        <td colspan="3"></td>
        <td>Total : </td>
        <td>{{ total }}</td>
    </tr>
    
    </tfoot>
    </table>
    {% else %}
    
    
    
    
    {% endif %}
    
    
    



{% endblock %}
